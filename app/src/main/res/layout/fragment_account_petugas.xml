<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:orientation="vertical"
    tools:context=".AccountSiswaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_weight="1"
                android:text="Akun Petugas"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_rounded"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tahun_ajaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023/2024"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray"/>

                <ImageButton
                    android:id="@+id/btn_dropdown"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:backgroundTint="#00FFFFFF"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:padding="7dp"
            android:background="@color/gray"
            android:weightSum="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pencarian..."
                android:maxLines="1"
                android:textColor="@color/white"
                android:background="@color/gray"
                android:layout_weight="1"
                android:padding="6dp"
                android:textColorHint="@color/white"/>

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_search"
                android:backgroundTint="#00FFFFFF"
                app:tint="@color/white" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/border_white">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:layout_weight="2.3"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:text="NIP"
                        android:maxLines="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:layout_weight="4"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:text="Nama"
                        android:maxLines="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:layout_weight="4"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:text="Alamat"
                        android:maxLines="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:layout_weight="5"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:text="Email"
                        android:maxLines="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:layout_weight="3"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:text="Hp"
                        android:maxLines="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:layout_weight="4"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:text="CreatedAt"
                        android:maxLines="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:layout_weight="4"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:text="UpdatedAt"
                        android:maxLines="1" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_account_petugas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/item_account_petugas"/>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>