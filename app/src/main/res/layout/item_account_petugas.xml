<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1000dp"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:stretchColumns="1"
    android:background="@drawable/border_white">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_NIP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:layout_weight="2.3"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="tvNIP"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_item_Nama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:layout_weight="4"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="tvNama"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_item_Alamat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:layout_weight="4"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="tvAlamat"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_item_Email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:layout_weight="5"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="tvEmail"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_item_Hp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:layout_weight="3"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="tvHp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_item_CreatedAt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:layout_weight="4"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="tvCreatedAt"
            android:maxLines="1" />


        <TextView
            android:id="@+id/tv_item_UpdatedAt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:layout_weight="4"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="tvUpdatedAt"
            android:maxLines="1" />


    </TableRow>

</TableLayout>