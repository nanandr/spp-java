<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:orientation="vertical"
    tools:context=".AkunFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_weight="1"
                android:text="Akun"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_rounded"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tahun_ajaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023/2024"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray"/>

                <ImageButton
                    android:id="@+id/btn_dropdown"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:backgroundTint="#00FFFFFF"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded"
            android:padding="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1"
            android:backgroundTint="@color/gray">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="15dp"
                android:layout_weight="1"
                android:text="Admin"/>

            <ImageButton
                android:id="@+id/img_btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logout"
                android:backgroundTint="@color/transparent"
                app:tint="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_siswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded"
            android:padding="30dp"
            android:backgroundTint="@color/light_gray">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Siswa"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_petugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded"
            android:padding="30dp"
            android:backgroundTint="@color/light_gray">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Petugas"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>